# Production Environment Variables
# Copy this file to .env.production for deployment

# Database - PostgreSQL (Production)
DATABASE_URL="postgresql://username:password@localhost:5432/msccruises_prod?schema=public"
# Example for Vercel Postgres:
# DATABASE_URL="postgres://user:pass@host.vercel-storage.com:5432/verceldb"
# Example for Supabase:
# DATABASE_URL="postgresql://postgres:password@db.project.supabase.co:5432/postgres"

# NextAuth
NEXTAUTH_URL="https://your-production-domain.com"
NEXTAUTH_SECRET="generate-a-strong-random-secret-at-least-32-characters-long"

# GCP Project
GCP_PROJECT_ID="msccruises"

# Google OAuth (Production)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# Naver OAuth (Production)
NAVER_CLIENT_ID="your-production-naver-client-id"
NAVER_CLIENT_SECRET="your-production-naver-client-secret"

# CRS API (Amadeus/Sabre)
CRS_API_KEY="your-production-crs-api-key"
CRS_API_SECRET="your-production-crs-api-secret"
CRS_API_URL="https://api.amadeus.com"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"
# Or use Redis Cloud:
# REDIS_URL="redis://default:password@redis-12345.c1.us-east-1.redislabs.com:12345"

# Error Tracking (Sentry)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Email Service (for confirmations)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"

# Payment Gateway
STRIPE_PUBLIC_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Node Environment
NODE_ENV="production"
